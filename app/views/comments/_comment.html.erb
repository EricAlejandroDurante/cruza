<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= button_to "Destroy Comment", [comment.article, comment], method: :delete, data: {
                  turbo_confirm: "Are you sure?", turbo_frame: '_top'
                } %>
  </p>
  <%= link_to "Edit comment", edit_article_comment_path(comment.article, comment) %>
<% end %>
